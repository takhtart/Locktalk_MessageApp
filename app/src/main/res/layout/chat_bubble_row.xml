<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/left_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/textinputbubble"
        android:backgroundTint="@color/sent_mes"
        android:layout_marginEnd="70dp"
        >

        <TextView
            android:id="@+id/left_bubble_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"



            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/textinputbubble"
        android:backgroundTint="@color/rec_mes"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
       >

        <TextView
            android:id="@+id/right_bubble_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"



            />

    </LinearLayout>

</RelativeLayout>